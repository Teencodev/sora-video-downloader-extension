{
  "manifest_version": 3,
  "name": "Sora2DL - Sora Video Downloader",
  "version": "1.0.0",
  "description": "Download Sora AI videos without watermark directly from your browser",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://sora.chatgpt.com/*",
    "https://sora2dl.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Sora2DL Downloader",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://sora.chatgpt.com/*"],
      "js": ["content-script.js"],
      "css": ["content-style.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://sora.chatgpt.com/*"]
    }
  ]
}
